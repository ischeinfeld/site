




body {
    font-family: 'Rubik', sans-serif;
}

/* never use h6 */

.header {
    overflow: hidden;
    padding: 1rem 0rem;
    /*background-color: lightblue;*/
}

.header a {
    float: left;
    text-align: center;
    padding: 0.5rem; 
    text-decoration: none;
    /*line-height: 25px;*/
    border-radius: 4px;
}

.header > .navigation {
    float: right;
}

/* Change the color of links on hover */
.header a:hover {
    background-color: #ddd;
    color: black;
}
